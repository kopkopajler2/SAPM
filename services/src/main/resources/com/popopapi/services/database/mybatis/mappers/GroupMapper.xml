<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.popopapi.services.database.mybatis.mappers.GroupMapper">

    <resultMap id="GroupResultMap" type="com.popopapi.services.database.models.Group">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <insert id="createGroup" parameterType="com.popopapi.services.database.models.Group">
        INSERT INTO groups (name)
        VALUES (#{name})
    </insert>

    <select id="getGroupById" parameterType="java.lang.Integer" resultMap="GroupResultMap">
        SELECT * FROM groups WHERE id = #{id}
    </select>

    <select id="getAllGroups" resultMap="GroupResultMap">
        SELECT * FROM groups
    </select>

    <update id="updateGroup" parameterType="com.popopapi.services.database.models.Group">
        UPDATE groups
        SET name = #{name}
        WHERE id = #{id}
    </update>

    <delete id="deleteGroup" parameterType="java.lang.Integer">
        DELETE FROM groups WHERE id = #{id}
    </delete>

</mapper>